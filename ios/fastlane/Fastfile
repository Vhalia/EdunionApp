default_platform(:ios)

platform :ios do

  lane :configuresigning do
    update_code_signing_settings(
      path: "EdunionApp.xcodeproj",
      use_automatic_signing: false,
      team_id: ENV["TEAM_ID"],
      code_sign_identity: "Apple Distribution",
      profile_name: ENV["PROFILE_NAME"],
      bundle_identifier: "com.edunionapp"
    )
  end

  lane :build do
    build_app(
      workspace: 'EdunionApp.xcworkspace',
      scheme: 'EdunionApp',
      clean: true,
      export_method: 'app-store',
      export_options: {
        provisioningProfiles: {
          "com.edunionapp" => ENV["PROFILE_NAME"]
        },
        signingCertificate: "Apple Distribution",
        uploadBitcode: true,
        uploadSymbols: true
      }
    )
  end

  lane :releasetestflight do
    create_keychain(
      name: ENV["KEYCHAIN_NAME"],
      password: ENV["KEYCHAIN_PASSWORD"],
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      add_to_search_list: true
    )

    sync_code_signing(
        readonly: true,
        keychain_name: ENV["KEYCHAIN_NAME"],
        keychain_password: ENV["KEYCHAIN_PASSWORD"]
    )

    build_app(
      workspace: 'EdunionApp.xcworkspace',
      scheme: 'EdunionApp',
      clean: true,
      export_method: 'app-store',
      export_options: {
        provisioningProfiles: {
          "com.edunionapp" => ENV["PROFILE_NAME"]
        },
        signingCertificate: "Apple Distribution",
        uploadBitcode: true,
        uploadSymbols: true
      }
    )

    upload_to_testflight
  end

  lane :releaseappstore do
    build_app(
      workspace: 'EdunionApp.xcworkspace',
      scheme: 'EdunionApp',
      clean: true,
      export_method: 'app-store',
      export_options: {
        provisioningProfiles: {
          "com.edunionapp" => ENV["PROFILE_NAME"]
        },
        signingCertificate: "Apple Distribution",
        uploadBitcode: true,
        uploadSymbols: true
      }
    )

    upload_to_app_store(
      api_key_path: JSON.parse(ENV["APP_STORE_CONNECT_API_KEY"]),
      skip_metadata: true
    )
  end
  
end
