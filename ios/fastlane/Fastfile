default_platform(:ios)

platform :ios do

  lane :configuresigning do
    update_code_signing_settings(
      path: "EdunionApp.xcodeproj",
      use_automatic_signing: false,
      team_id: ENV["TEAM_ID"],
      code_sign_identity: "Apple Distribution",
      profile_name: ENV["PROFILE_NAME"],
      bundle_identifier: "com.edunionapp"
    )
  end

  lane :setupcodesigning do
    certs_dir = File.join(Dir.pwd, "ios/certs")
    FileUtils.mkdir_p(certs_dir)

    dist_cert_path = File.join(certs_dir, "DistributionCertificate.p12")
    File.write(dist_cert_path, Base64.decode64(ENV["CERTIFICATE_B64"]))

    if File.exist?(dist_cert_path)
      UI.success("Certificate created at #{dist_cert_path}")
    end
    else
      UI.user_error!("Failed to create certificate at #{dist_cert_path}")
    end

    profile_content = Base64.decode64(ENV["MOBILEPROVISION_PROFILE_B64"])
    profile_path = File.expand_path("~/Library/MobileDevice/Provisioning Profiles/EdunionAppStoreConnect.mobileprovision")
    
    FileUtils.mkdir_p(File.dirname(profile_path))
    File.write(profile_path, profile_content)
  
    if File.exist?(profile_path)
      UI.success("Provisioning profile installed successfully")
    else
      UI.user_error!("Failed to install provisioning profile")
    end

    create_keychain(
      name: "build.keychain",
      password: ENV["KEYCHAIN_PWD"],
      default_keychain: true,
      unlock: true,
      timeout: 3600
    )

    import_certificate(
      certificate_path: "ios/certs/DistributionCertificate.p12",
      certificate_password: ENV["CERT_PWD"],
      keychain_name: "build.keychain",
      keychain_password: ENV["KEYCHAIN_PWD"]
    )
  end

  lane :build do
    build_app(
      workspace: 'EdunionApp.xcworkspace',
      scheme: 'EdunionApp',
      clean: true,
      export_method: 'app-store',
      export_options: {
        provisioningProfiles: {
          "com.edunionapp" => ENV["PROFILE_NAME"]
        },
        signingCertificate: "Apple Distribution",
        uploadBitcode: true,
        uploadSymbols: true
      }
    )
  end

  lane :releasetestflight do
    build_app(
      workspace: 'EdunionApp.xcworkspace',
      scheme: 'EdunionApp',
      clean: true,
      export_method: 'app-store',
      export_options: {
        provisioningProfiles: {
          "com.edunionapp" => ENV["PROFILE_NAME"]
        },
        signingCertificate: "Apple Distribution",
        uploadBitcode: true,
        uploadSymbols: true
      }
    )

    upload_to_testflight
  end

  lane :releaseappstore do
    build_app(
      workspace: 'EdunionApp.xcworkspace',
      scheme: 'EdunionApp',
      clean: true,
      export_method: 'app-store',
      export_options: {
        provisioningProfiles: {
          "com.edunionapp" => ENV["PROFILE_NAME"]
        },
        signingCertificate: "Apple Distribution",
        uploadBitcode: true,
        uploadSymbols: true
      }
    )

    upload_to_app_store(
      api_key_path: JSON.parse(ENV["APP_STORE_CONNECT_API_KEY"]),
      skip_metadata: true
    )
  end
  
end
